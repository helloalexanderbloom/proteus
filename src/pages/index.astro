---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import heroLogoImage from '../images/heroLogoImage.png'
const pageTitle = 'Home Page';
---
<BaseLayout pageTitle={pageTitle}>
    <div class="flex flex-col items-center pt-16">

        <Image 
            class="w-2/3 sm:w-1/3 pb-10" 
            src={heroLogoImage} 
            alt="Large Silver Proteus Logo"
        />

        <div class="flex flex-col items-center w-2/3 sm:w-full">
            <p class="text-center text-3xl sm:text-5xl font-bold pb-2.5">
                Bristols New <br> Biotech Society
            </p>

            <p class="text-center text-xl sm:text-2xl font-normal text-gray-900 pb-4">
                Gain skills, support, and connections with us
            </p>

            
            <a class="text-sky-700 text-lg sm:text-xl" href="/about/">
                Learn more
            </a>
        </div>
    </div>
</BaseLayout>
